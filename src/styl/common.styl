}

.container {
  margin: 0 auto
  padding: 0 30px 0 30px
  max-width: 1170px
  width: 100%
}

.h1, .h1 *, .h2, .h2 *, .h3, .h3 *, .h4, .h4 * {
  font-family: RexBoldInline;
  font-weight: 400;
  text-align: center
  text-transform: uppercase
}
.h1, .h1 * {
  font-size: 90px;
  line-height: 80px;
}
.h2, .h2 * {
  font-size: 60px;
  line-height: 75px;
}
.h3, .h3 * {
  font-size: 46px;
  line-height: 53px;
}
.h4, .h4 * {
  font-size: 33px
  line-height: 45px
}

input {
  margin: 7px
  max-width 100%
  height: 71px;
  padding: 0 34px 0 34px
  border-radius: 36px;
  border: 1px solid #ebebeb;

  color: #2d2d2d;
  font-family: "Open Sans";
  font-size: 17px;
  font-weight: 400;
  line-height: 25px;
  &::-webkit-input-placeholder {color:#2d2d2d;opacity: .7}
  &::-moz-placeholder          {color:#2d2d2d;opacity: .7}/* Firefox 19+ */
  &:-moz-placeholder           {color:#2d2d2d;opacity: .7}/* Firefox 18- */
  &:-ms-input-placeholder      {color:#2d2d2d;opacity: .7}
}
.input {
  &_icon {
    position: relative;
    margin: 7px
    input {
      margin: 0
      width: 100%
      padding-right: 60px
    }
    &:after {
      content: ''
      position: absolute;
      right: 23px
      top: 50%;
      margin-top: -12.5px
      width: 25px
      height: 25px
      background-image: url("../img/iconset-tips.png")
    }
    &_name {
      &:after {
        margin-top: -14.5px
        width: 29px
        height: 29px
        background-position: 0 -93px;
      }
    }
    &_phone {
      &:after {
        margin-top: -12.5px
        width: 25px
        height: 25px
        background-position: 0 -40px
      }
    }
    &_email {
      &:after {
        margin-top: -9.5px
        width: 25px
        height: 19px
        background-position: 0 0;
      }
    }
    &_city {
      &:after {
        margin-top: -14px
        width: 22px
        height: 28px
        background-position: 0 -65px;
      }
    }

  }
}

.checkbox {
  position: relative;
  margin-top: 25px
  margin-bottom: 10px
  font-size: 13px
  color: #696969;
  width: 100%
  a {
    color: #d5a235;
  }
  label {
    max-height 20px
  }
}
.checkbox.checkbox_icon input:not(checked) + label:before {
  border-radius: 100%;
}
.checkbox input:not(checked) + label:before {
  top: 0
  width: 20px;
  height: 20px;
  background: gold
}
.checkbox input:not(checked) + label:after {
  width: 10px
  height: 8px
}
.checkbox input:not(checked) + label {
  position: absolute;
  left: -7px
  right: 35px
  padding: 0 0 0 27px;
}
.checkbox input:not(checked) + label:after {
  margin-top: -4px
}
.checkbox.checkbox_icon input:not(checked) + label:after {
  width: 10px
  height: 8px
}

.overlay {
  display: none
  position: fixed;
  z-index: 10
  top: 0
  right: 0
  width: 100%
  height: 100%
  background: rgba(0, 0, 0, 0.4)
}

.modal.block_framed {
  max-width: 445px
  .h4 {
    margin: 15px 0 0 -30px
    width: -webkit-calc(100% + 60px);
    width: calc(100% + 60px);
    padding: 0 20px 0 20px;
  }
  .form {
    .input_icon {
      width: 100%
    }
    &__input {
      width: 100%
    }
    &__button {
      margin-top: 10px
      width: 100%
    }
    &__checkbox {
      width: 110%
    }
    .checkbox input:not(checked) + label {
      left: 15px;
      right: 12px;
    }
  }
}
.modal.block_framed a.close-modal {
  top: 15px
  right: 15px
  width: 15px
  height: 15px
  background-image: url("data:image/svg+xml;utf8;base64,")
