@media (max-width: 400px) {
  .burger {
    width: 20px;
    height: 20px;
    i,
    i::before,
    i::after {
      height: 2px
    }
    i::before {
      top: -6px;
    }
    i::after {
      top: 6px;
    }
  }

  .container {
    padding: 0 15px 0 15px
  }

  .h3 {
    font-size: 35px;
    line-height: 42px;
  }
  .h4 {
    font-size: 30px
    line-height: 40px
  }

  .divider {
    &_moustache {
      &:before,
      &:after {
        width: 80px
      }
      &:before {
        left: -110px
      }
      &:after {
        right: -110px
      }
    }
  }

  .header {
    .subTop {
      .address {
        max-width: 170px
        &__text {
          font-size: 16px
        }
        &__button {
          padding-bottom: 3px
          font-size: 13px
          &:after {
            right: -15px
            width: 5px
            height: 5px
          }
        }
      }
    }
  }

  .sectionFranchise {
    .features {
      &__item {
        min-width: 280px;
      }
    }
  }
