      margin-top: 45px
      width: 47%
      font-family: OpenSans
      font-size: 18px
      color: #2d2d2d
      &:nth-child(even) {
        margin-left: 20px
      }
    }
    &__letter {
      position: absolute;
      z-index 34234
      left: 0
      width: 63px
      &:after {
        content: '';
        position: absolute
        z-index: -1
        top: -12px;
        left: 0
        width: 63px;
        height: 63px;
        border-radius: 50%;
        background-image: -moz-linear-gradient( 90deg, rgb(248,197,89) 0%, rgb(255,223,154) 100%);
        background-image: -webkit-linear-gradient( 90deg, rgb(248,197,89) 0%, rgb(255,223,154) 100%);
        background-image: -ms-linear-gradient( 90deg, rgb(248,197,89) 0%, rgb(255,223,154) 100%);
      }
    }
    &__name {
      display: flex
      align-items center
      margin-bottom: 30px
      padding-left: 85px
      text-align: left
    }
    .city {
      &__item {
        position: relative;
        margin-bottom: 25px
        padding-left: 30px
        &:before {
          content: ''
          position: absolute;
          left: 0
          width: 26px
          height: 28px
          background-image: url("../img/iconset-tips.png")
        }
        &.cities__address {
          &:before {
            width: 22px
            height: 28px
            background-position:  0 -65px
          }
        }
        &.cities__phone {
          &:before {
            width: 25px
            height: 25px
            background-position: 0 -40px
          }
        }
        &.cities__schedule {
          &:before {
            width: 25px
            height: 25px
            background: url("../img/icon-clock.png") 1px -1px no-repeat
          }
        }
        &.cities__coming {
          &:before {
            left: 7px
            top: 50%
            transform: translateY(-50%)
            width: 12px
            height: 12px
            border-radius: 50%
            background-image: -moz-linear-gradient( 90deg, rgb(248,197,89) 0%, rgb(255,223,154) 100%);
            background-image: -webkit-linear-gradient( 90deg, rgb(248,197,89) 0%, rgb(255,223,154) 100%);
            background-image: -ms-linear-gradient( 90deg, rgb(248,197,89) 0%, rgb(255,223,154) 100%);
          }
        }
      }
    }
  }
  .cross_circle {
    position: absolute;
    //z-index: 12
    top: 55px
    right: 30px
  }
}

