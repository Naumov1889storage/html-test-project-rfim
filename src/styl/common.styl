}

OpenSans = 'Open Sans', sans-serif;
RexBoldInline = 'RexBoldInline';

gold = #fbd075;
white = #ffffff;
black = #000000;
cream = #f6f3f0

* {
  font-family: OpenSans;
}

a {
  text-decoration: underline
  &:hover {
    text-decoration: none
  }
}

.text {
  &_color {
    &_gold {
      color: gold;
    }
    &_white {
