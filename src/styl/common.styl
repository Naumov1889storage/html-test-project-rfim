    background-color: transparent
  }
}

.slash {
  &-vertical {
    display: block
    width: 1px
    height: 100%
    background: rgba(255,255,255,0.1)
  }
}

.divider {
  &_moustache {
    display: block
    position: relative;
    margin: 15px auto 23px auto
    width: 50px
    height: 18px
    background-image: url(../img/iconset-moustache.png)
    &:before,
    &:after {
      content: ''
      position: absolute
      top: 50%
      margin-top: -2px
      width: 120px
      height: 2px
      background: black
    }
    &:before {
      left: -150px
    }
    &:after {
      right: -150px
    }
    &_black {
      background-position: 0 0
      &:before,
      &:after {
        background: black
      }
    }
    &_white {
      background-position: 0 -18px
      &:before,
      &:after {
        background: white
      }
    }
  }
}

